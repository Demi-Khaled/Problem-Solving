class Solution {
public:
    vector<int> fairCandySwap(vector<int>& a, vector<int>& b) {
        sort(a.begin(),a.end());
        sort(b.begin(),b.end());
        int asum = 0, bsum = 0;
        for (auto it : a)
            asum += it;
        for (auto it : b)
            bsum += it;
        for (int i = 0; i < a.size(); i++) {
            int l = 0, r = b.size() - 1;
            while (l <= r) {
                int m = (l + r) / 2;
                if(asum-a[i]+b[m]==bsum-b[m]+a[i])
                {
                    return {a[i],b[m]};
                }
                if(asum-a[i]+b[m]>bsum-b[m]+a[i]){
                    r=m-1;
                }
                else{
                    l=m+1;
                }
            }
        }
        return {0,0};
    }
};
