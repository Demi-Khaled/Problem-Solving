class Solution {
public:
    vector<int> kWeakestRows(vector<vector<int>>& mat, int k) {
        vector<pair<int, int>> temp;
        int r=mat.size(),c=mat[0].size();
        for (int i = 0; i < r; i++) {
            int tmp = 0;
            for (int j = 0; j < c; j++) {
                if (mat[i][j] == 1)
                    tmp++;
            }
            temp.push_back({tmp, i});
        }
        sort(temp.begin(), temp.end());
        vector<int> ans;
        for (int i = 0; i < k; i++)
        {    ans.push_back(temp[i].second);}
        return ans;
    }
};
