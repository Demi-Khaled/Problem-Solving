class Solution {
    public int countNegatives(int[][] grid) {
        int row = grid.length;
        int col = grid[0].length;
        int count = 0;
        for (int i = 0; i < row; i++) {
            int left = 0;
            int right = col - 1;
            int rowCount = 0;
            while (left <= right) {
                int mid = (left + right) / 2;
                if (grid[i][mid] < 0) {
                    rowCount = col - mid;
                    right = mid - 1;
                } else
                    left = mid + 1;
            }
            count += rowCount;
        }
        return count;
    }
}
